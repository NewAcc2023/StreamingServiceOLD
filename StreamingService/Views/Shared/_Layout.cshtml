<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StreamingService</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StreamingService.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/FrontImages/icon.png">
</head>
<body class="body_bg">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark nav_bg box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img height="30" class="m-0" src="~/FrontImages/logo.png" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light fw-lighter fs-5" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (ViewContext.HttpContext.Session.GetInt32("UserId") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light fw-lighter fs-5" asp-area="" asp-controller="Home" asp-action="SubscriptionsPage">Subscriptions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light fw-lighter fs-5" asp-area="" asp-controller="Home" asp-action="LikedPage">Liked</a>
                            </li>
                        }
                    </ul>
                    <div>
                        <form method="get" class="p-0 d-flex nav_bg justify-content-end border-0" action="@Url.Action("SearchPage", "Home")">
                            <input type="text" class="rounded-2 border-0" name="query" required placeholder="Search channels or users" style="outline:none;">
                            <button type="submit" class="btn btn-danger p-0" style="width:40px; margin-left:4px;"><i class="fa-solid fa-magnifying-glass"></i></button>
                        </form>
                    </div>

                    @if (ViewContext.HttpContext.Session.GetInt32("UserId") != null)
                    {
                        <a class="nav-link text-light fw-lighter fs-5" asp-area="" asp-controller="Home" asp-action="MyPage">MyCabnet</a>
                        <a class="nav-link text-light fw-lighter fs-5" asp-area="" asp-controller="Account" asp-action="Logout">LogOut</a>
                    }
                    else
                    {
                        <a class="nav-link text-light fw-lighter fs-5" asp-area="" asp-controller="Account" asp-action="Login">LogIn</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer nav_bg text-muted">
        <div class="container">
            &copy; 2023 - StreamingService
        </div>
    </footer>
    <script src="https://kit.fontawesome.com/e3f65e4805.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
